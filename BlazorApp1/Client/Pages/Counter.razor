@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Add to count</button>

<button class="btn btn-primary" @onclick="DecrementCount">Remove from count</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void DecrementCount()
    {
        currentCount -= IncrementAmount;
    }
}
